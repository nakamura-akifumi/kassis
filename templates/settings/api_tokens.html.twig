{% extends 'base.html.twig' %}

{% block title %}APIトークン{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">APIトークン</h1>
            <p class="text-muted small mb-0">Bearer認証用のトークンを管理します。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_settings_index') }}">設定に戻る</a>
        </div>
    </div>

    {% if createdToken %}
        <div class="alert alert-warning">
            <div class="mb-1 fw-bold">新しいトークンを作成しました。必ず控えてください。</div>
            <code>{{ createdToken }}</code>
        </div>
    {% endif %}

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <h2 class="h6">新しいトークンを作成</h2>
            <form method="post" action="{{ path('app_settings_api_tokens') }}" class="d-flex flex-wrap gap-2 align-items-end">
                <input type="hidden" name="_token" value="{{ csrf_token('api_token_create') }}">
                <div>
                    <label class="form-label small mb-1" for="api_token_name">トークン名</label>
                    <input class="form-control form-control-sm" id="api_token_name" name="name" type="text" required>
                </div>
                <div>
                    <label class="form-label small mb-1" for="api_token_expires_at">有効期限</label>
                    <input class="form-control form-control-sm" id="api_token_expires_at" name="expires_at" type="datetime-local">
                </div>
                <div>
                    <div class="form-text small">未入力の場合は無期限</div>
                </div>
                <button type="submit" class="btn btn-primary btn-sm">作成</button>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h6">トークン一覧</h2>
            {% if tokens is empty %}
                <p class="text-muted small mb-0">トークンはまだありません。</p>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-sm align-middle mb-0">
                        <thead>
                            <tr>
                                <th>名称</th>
                                <th>状態</th>
                                <th>作成日時</th>
                                <th>最終使用</th>
                                <th>有効期限</th>
                                <th class="text-end">操作</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for token in tokens %}
                                <tr>
                                    <td>{{ token.name }}</td>
                                    <td>
                                        {% if token.enabled %}
                                            <span class="badge bg-success">有効</span>
                                        {% else %}
                                            <span class="badge bg-secondary">無効</span>
                                        {% endif %}
                                    </td>
                                    <td>{{ token.createdAt ? token.createdAt|date('Y-m-d H:i') : '-' }}</td>
                                    <td>{{ token.lastUsedAt ? token.lastUsedAt|date('Y-m-d H:i') : '-' }}</td>
                                    <td>{{ token.expiresAt ? token.expiresAt|date('Y-m-d H:i') : '-' }}</td>
                                    <td class="text-end">
                                        <form method="post" action="{{ path('app_settings_api_tokens_toggle', {id: token.id}) }}" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('api_token_toggle_' ~ token.id) }}">
                                            {% if token.enabled %}
                                                <button type="submit" class="btn btn-outline-secondary btn-sm">無効化</button>
                                            {% else %}
                                                <button type="submit" class="btn btn-outline-primary btn-sm">有効化</button>
                                            {% endif %}
                                        </form>
                                        <form method="post" action="{{ path('app_settings_api_tokens_delete', {id: token.id}) }}" class="d-inline" onsubmit="return confirm('削除しますか？');">
                                            <input type="hidden" name="_token" value="{{ csrf_token('api_token_delete_' ~ token.id) }}">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">削除</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}貸出グループ編集{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">貸出グループ編集</h1>
            <p class="text-muted small mb-0">貸出グループ名と分類1の割り当てを編集します。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_settings_loan_group') }}">一覧へ戻る</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <strong class="small">編集</strong>
        </div>
        <div class="card-body">
            <form method="post" action="{{ path('app_settings_loan_group_update', {id: group.id}) }}">
                <input type="hidden" name="_token" value="{{ csrf_token('loan_group_update_' ~ group.id) }}">
                <div class="mb-3">
                    <label class="form-label small mb-1" for="loan-group-name">貸出グループ名</label>
                    <input type="text" class="form-control form-control-sm" id="loan-group-name" name="name" value="{{ group.name }}" required>
                </div>
                <div class="mb-3">
                    <label class="form-label small mb-1" for="loan-group-type1">分類1</label>
                    <select class="form-select form-select-sm" id="loan-group-type1" name="type1_identifiers[]" multiple size="8">
                        {% for identifier, label in type1Options %}
                            <option value="{{ identifier }}" {{ identifier in selectedType1 ? 'selected' : '' }}>{{ label }}</option>
                        {% endfor %}
                    </select>
                    <div class="form-text">複数選択可能です。</div>
                </div>
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary btn-sm">更新</button>
                    <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_settings_loan_group') }}">キャンセル</a>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">UID</label>
            <input class="form-control" type="text" value="{{ event.uid }}" readonly>
        </div>
        <div class="mb-3">
            <label class="form-label">件名</label>
            <input class="form-control" type="text" name="summary" value="{{ event.summary ?? '' }}" required>
        </div>
        <div class="mb-3">
            <label class="form-label">説明</label>
            <textarea class="form-control" name="description" rows="3">{{ event.description ?? '' }}</textarea>
        </div>
        <div class="mb-3">
            <label class="form-label">場所</label>
            <input class="form-control" type="text" name="location" value="{{ event.location ?? '' }}">
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="all_day" value="1" id="allDay" {% if event.allDay %}checked{% endif %}>
            <label class="form-check-label" for="allDay">終日イベント</label>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">開始日（終日）</label>
                <input class="form-control" type="date" name="start_date" value="{{ event.dtStart ? event.dtStart|date('Y-m-d') : '' }}">
            </div>
            <div class="col-md-6">
                <label class="form-label">終了日（終日）</label>
                <input class="form-control" type="date" name="end_date" value="{{ event.dtEnd ? event.dtEnd|date('Y-m-d') : '' }}">
            </div>
        </div>
        <div class="row g-3 mb-3">
            <div class="col-md-6">
                <label class="form-label">開始日時</label>
                <input class="form-control" type="datetime-local" name="start_datetime" value="{{ event.dtStart ? event.dtStart|date('Y-m-d\\TH:i') : '' }}">
            </div>
            <div class="col-md-6">
                <label class="form-label">終了日時</label>
                <input class="form-control" type="datetime-local" name="end_datetime" value="{{ event.dtEnd ? event.dtEnd|date('Y-m-d\\TH:i') : '' }}">
            </div>
        </div>
        <div class="mb-3">
            <label class="form-label">タイムゾーン (TZID)</label>
            <input class="form-control" type="text" name="timezone" value="{{ event.timezone ?? '' }}" placeholder="Asia/Tokyo">
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="is_closed" value="1" id="isClosed" {% if event.isClosed %}checked{% endif %}>
            <label class="form-check-label" for="isClosed">閉館日として扱う</label>
        </div>
        <hr>
        <h2 class="h6">iCal拡張項目</h2>
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">RECURRENCE-ID</label>
                <input class="form-control" type="datetime-local" name="recurrence_id" value="{{ event.recurrenceId ? event.recurrenceId|date('Y-m-d\\TH:i') : '' }}">
            </div>
            <div class="col-md-6">
                <label class="form-label">SEQUENCE</label>
                <input class="form-control" type="number" name="sequence" value="{{ event.sequence ?? '' }}" min="0">
            </div>
        </div>
        <div class="row g-3 mt-1">
            <div class="col-md-6">
                <label class="form-label">STATUS</label>
                <input class="form-control" type="text" name="status" value="{{ event.status ?? '' }}" placeholder="CONFIRMED">
            </div>
            <div class="col-md-6">
                <label class="form-label">TRANSP</label>
                <input class="form-control" type="text" name="transparency" value="{{ event.transparency ?? '' }}" placeholder="OPAQUE">
            </div>
        </div>
        <div class="mt-3">
            <label class="form-label">ORGANIZER</label>
            <input class="form-control" type="text" name="organizer" value="{{ event.organizer ?? '' }}" placeholder="mailto:info@example.com">
        </div>
        <div class="mt-3">
            <label class="form-label">RRULE</label>
            <textarea class="form-control" name="rrule" rows="2" placeholder="FREQ=WEEKLY;BYDAY=MO">{{ event.rrule ?? '' }}</textarea>
        </div>
        <div class="mt-3">
            <label class="form-label">RDATE</label>
            <textarea class="form-control" name="rdate" rows="2">{{ event.rdate ?? '' }}</textarea>
        </div>
        <div class="mt-3">
            <label class="form-label">EXDATE</label>
            <textarea class="form-control" name="exdate" rows="2">{{ event.exdate ?? '' }}</textarea>
        </div>
    </div>
</div>

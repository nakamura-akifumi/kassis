{% extends 'base.html.twig' %}

{% block title %}イベントカレンダー管理{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">イベントカレンダー管理</h1>
            <p class="text-muted small mb-0">閉館日・イベントを登録し、iCalで入出力できます。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_settings_index') }}">設定へ戻る</a>
            <a class="btn btn-outline-primary btn-sm" href="{{ path('app_settings_calendar_events_export') }}">iCalエクスポート</a>
            <a class="btn btn-primary btn-sm" href="{{ path('app_settings_calendar_events_new') }}">新規作成</a>
        </div>
    </div>

    <div class="card shadow-sm mb-3">
        <div class="card-body">
            <form method="post" action="{{ path('app_settings_calendar_events_import') }}" enctype="multipart/form-data" class="row g-2 align-items-end">
                <div class="col-md-6">
                    <label class="form-label">iCal (.ics) インポート</label>
                    <input class="form-control" type="file" name="ics_file" accept=".ics" required>
                </div>
                <div class="col-md-3">
                    <input type="hidden" name="_token" value="{{ csrf_token('calendar_event_import') }}">
                    <button class="btn btn-outline-primary w-100" type="submit">インポート</button>
                </div>
                <div class="col-md-3 text-muted small">
                    既存のUID+RECURRENCE-IDは更新されます。
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped mb-0 align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>件名</th>
                            <th>開始日</th>
                            <th>終了日</th>
                            <th>繰り返し</th>
                            <th class="text-end">操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for event in events %}
                            <tr>
                                <td>
                                    <div class="fw-semibold">{{ event.summary }}</div>
                                    {% if event.location %}
                                        <div class="text-muted small">{{ event.location }}</div>
                                    {% endif %}
                                </td>
                                <td>
                                    {% set startWeekday = ('Date.Weekday.' ~ event.dtStart|date('D'))|trans %}
                                    {% set endDateDisplay = '' %}
                                    {% set endWeekday = '' %}
                                    {% if event.rrule %}
                                        {{ event.dtStart|date('Y-m-d') }}（{{ startWeekday }}）
                                        {% if event.dtEnd %}
                                            {% set endDateDisplay = event.dtEnd|date('Y-m-d') %}
                                            {% set endWeekday = ('Date.Weekday.' ~ event.dtEnd|date('D'))|trans %}
                                        {% endif %}
                                        {% if endDateDisplay %}
                                            〜{{ endDateDisplay }}（{{ endWeekday }}）
                                        {% endif %}
                                    {% else %}
                                        {{ event.dtStart|date('Y-m-d') }}（{{ startWeekday }}）
                                    {% endif %}
                                </td>
                                <td>
                                    {% if event.rrule %}
                                        {% set untilValue = '' %}
                                        {% for part in event.rrule|upper|split(';') %}
                                            {% if part starts with 'UNTIL=' %}
                                                {% set untilRaw = part|replace({'UNTIL=': ''}) %}
                                                {% if untilRaw|length >= 8 %}
                                                    {% set untilValue = untilRaw|slice(0, 8) %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if untilValue %}
                                            {% set untilDate = untilValue|slice(0, 4) ~ '-' ~ untilValue|slice(4, 2) ~ '-' ~ untilValue|slice(6, 2) %}
                                            {{ untilDate }}（{{ ('Date.Weekday.' ~ untilDate|date('D'))|trans }}）
                                        {% else %}
                                            <span class="text-muted">未設定</span>
                                        {% endif %}
                                    {% else %}
                                        {% if event.dtEnd %}
                                            {{ event.dtEnd|date('Y-m-d') }}（{{ ('Date.Weekday.' ~ event.dtEnd|date('D'))|trans }}）
                                        {% else %}
                                            <span class="text-muted">未設定</span>
                                        {% endif %}
                                    {% endif %}
                                </td>
                                <td>
                                    {% if event.rrule %}
                                        {% set freq = '' %}
                                        {% set interval = '1' %}
                                        {% for part in event.rrule|upper|split(';') %}
                                            {% if part starts with 'FREQ=' %}
                                                {% set freq = part|replace({'FREQ=': ''}) %}
                                            {% elseif part starts with 'INTERVAL=' %}
                                                {% set interval = part|replace({'INTERVAL=': ''}) %}
                                            {% endif %}
                                        {% endfor %}
                                        {% if freq == 'DAILY' %}
                                            毎日
                                        {% elseif freq == 'WEEKLY' and interval == '2' %}
                                            隔週
                                        {% elseif freq == 'WEEKLY' %}
                                            毎週
                                        {% elseif freq == 'MONTHLY' %}
                                            毎月
                                        {% elseif freq == 'YEARLY' %}
                                            毎年
                                        {% else %}
                                            繰り返し
                                        {% endif %}
                                    {% else %}
                                        <span class="text-muted">なし</span>
                                    {% endif %}
                                </td>
                                <td class="text-end">
                                    <a class="btn btn-outline-primary btn-sm" href="{{ path('app_settings_calendar_events_edit', {id: event.id}) }}">編集</a>
                                    <form method="post" action="{{ path('app_settings_calendar_events_delete', {id: event.id}) }}" class="d-inline" onsubmit="return confirm('削除しますか？');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('calendar_event_delete_' ~ event.id) }}">
                                        <button class="btn btn-outline-danger btn-sm" type="submit">削除</button>
                                    </form>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">イベントが登録されていません。</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}イベント作成{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">イベント作成</h1>
            <p class="text-muted small mb-0">閉館日やイベントを登録します。</p>
        </div>
        <div>
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_settings_calendar_events') }}">一覧へ戻る</a>
        </div>
    </div>

    <form method="post" action="{{ path('app_settings_calendar_events_new') }}">
        <input type="hidden" name="_token" value="{{ csrf_token('calendar_event_create') }}">
        {% include 'settings/calendar_event/_form.html.twig' with { event: event } %}
        <div class="mt-3 d-flex gap-2">
            <button class="btn btn-primary" type="submit">作成する</button>
            <a class="btn btn-outline-secondary" href="{{ path('app_settings_calendar_events') }}">キャンセル</a>
        </div>
    </form>
</div>
{% endblock %}

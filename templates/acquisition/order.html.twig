{% extends 'base.html.twig' %}

{% block title %}発注{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">発注</h1>
            <p class="text-muted small mb-0">発注待ちの資料を発注済みにします。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_acquisition_index') }}">発注受入管理へ</a>
        </div>
    </div>

    <form method="post" action="{{ path('app_acquisition_order_submit') }}">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>発注書の選択</strong>
            </div>
            <div class="card-body">
                {% if orders is empty %}
                    <div class="small text-muted">In Progress の発注書がありません。先に発注書を作成してください。</div>
                {% else %}
                    <div class="row g-2 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label small mb-1" for="order-select">発注書</label>
                            <select class="form-select form-select-sm" id="order-select" name="order_id" required>
                                {% for order in orders %}
                                    <option value="{{ order.id }}" {% if selectedOrder and order.id == selectedOrder.id %}selected{% endif %}>
                                        {{ order.orderNumber }} / {{ order.status }}{% if order.exportedAt %} / 出力済{% endif %}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <a class="btn btn-outline-secondary btn-sm w-100" href="{{ path('app_acquisition_order', {order_id: selectedOrder ? selectedOrder.id : null}) }}">更新</a>
                        </div>
                        <div class="col-md-2">
                            {% if selectedOrder %}
                                <a class="btn btn-outline-primary btn-sm w-100" href="{{ path('app_acquisition_order_export', {order_id: selectedOrder.id}) }}">Excel出力</a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                <strong>発注待ち一覧</strong>
                <button type="submit" class="btn btn-primary btn-sm">発注する</button>
            </div>
            <div class="card-body p-0">
                {% if orders is empty %}
                    <div class="p-3 small text-muted">発注書が無いため発注できません。</div>
                {% elseif manifestations is empty %}
                    <div class="p-3 small text-muted">対象がありません。</div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-sm table-striped align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 40px;"></th>
                                    <th>識別子</th>
                                    <th>タイトル</th>
                                    <th>状態</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for manifestation in manifestations %}
                                    <tr>
                                        <td><input type="checkbox" name="manifestation_ids[]" value="{{ manifestation.id }}"></td>
                                        <td>{{ manifestation.identifier }}</td>
                                        <td>{{ manifestation.title }}</td>
                                        <td>{{ manifestation.status1 }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </form>
</div>
{% if orders is not empty %}
    <script>
        const orderSelect = document.getElementById('order-select');
        if (orderSelect) {
            orderSelect.addEventListener('change', () => {
                const value = orderSelect.value;
                if (!value) return;
                window.location.href = '{{ path('app_acquisition_order') }}' + '?order_id=' + encodeURIComponent(value);
            });
        }
    </script>
{% endif %}
{% endblock %}

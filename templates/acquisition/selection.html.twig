{% extends 'base.html.twig' %}

{% block title %}選書{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">選書</h1>
            <p class="text-muted small mb-0">状態がNewの資料を発注待ちにします。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_acquisition_index') }}">発注受入管理へ</a>
        </div>
    </div>

    <form method="post" action="{{ path('app_acquisition_selection_submit') }}">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                <strong>New一覧</strong>
                <button type="submit" class="btn btn-primary btn-sm">発注待ちにする</button>
            </div>
            <div class="card-body p-0">
                {% if manifestations is empty %}
                    <div class="p-3 small text-muted">対象がありません。</div>
                {% else %}
                    <div class="table-responsive">
                        <table class="table table-sm table-striped align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 40px;"></th>
                                    <th>識別子</th>
                                    <th>タイトル</th>
                                    <th>状態</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for manifestation in manifestations %}
                                    <tr>
                                        <td><input type="checkbox" name="manifestation_ids[]" value="{{ manifestation.id }}"></td>
                                        <td>{{ manifestation.identifier }}</td>
                                        <td>{{ manifestation.title }}</td>
                                        <td>{{ manifestation.status1 }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% endif %}
            </div>
        </div>
    </form>
</div>
{% endblock %}

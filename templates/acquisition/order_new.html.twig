{% extends 'base.html.twig' %}

{% block title %}発注書新規作成{% endblock %}

{% block body %}
<div class="container py-3">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <div>
            <h1 class="h4 mb-1">発注書新規作成</h1>
            <p class="text-muted small mb-0">発注情報を入力して発注書を作成します。</p>
        </div>
        <div class="d-flex gap-2">
            <a class="btn btn-outline-secondary btn-sm" href="{{ path('app_acquisition_index') }}">発注受入管理へ</a>
        </div>
    </div>

    <form method="post" action="{{ path('app_acquisition_order_new_submit') }}">
        <div class="card shadow-sm">
            <div class="card-header bg-white d-flex align-items-center justify-content-between">
                <strong>発注情報</strong>
                <button type="submit" class="btn btn-primary btn-sm">作成</button>
            </div>
            <div class="card-body">
                <div class="row g-2">
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-number">発注番号</label>
                        <input type="text" class="form-control form-control-sm" id="order-number" name="order_number" required autofocus>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-vendor">発注先</label>
                        <input type="text" class="form-control form-control-sm" id="order-vendor" name="vendor">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-amount">発注金額</label>
                        <input type="number" class="form-control form-control-sm" id="order-amount" name="order_amount" min="0" step="1">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-delivery">納品予定日</label>
                        <input type="date" class="form-control form-control-sm" id="order-delivery" name="delivery_due_date">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-estimate">見積番号</label>
                        <input type="text" class="form-control form-control-sm" id="order-estimate" name="estimate_number">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-vendor-contact">発注先担当者</label>
                        <input type="text" class="form-control form-control-sm" id="order-vendor-contact" name="vendor_contact">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-contact">発注元担当者</label>
                        <input type="text" class="form-control form-control-sm" id="order-contact" name="order_contact">
                    </div>
                    <div class="col-md-4">
                        <label class="form-label small mb-1" for="order-external">その他管理番号</label>
                        <input type="text" class="form-control form-control-sm" id="order-external" name="external_reference">
                    </div>
                    <div class="col-md-8">
                        <label class="form-label small mb-1" for="order-memo">メモ</label>
                        <textarea class="form-control form-control-sm" id="order-memo" name="memo" rows="2"></textarea>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
